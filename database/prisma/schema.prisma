generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int           @id @default(autoincrement())
  fname             String
  lname             String
  avatar_url        String?
  registration_date DateTime      @default(now())
  phone             String        @unique
  birthday          String
  password          String
  role              Role          @default(client)
  Order             Order[]
  Transactions      Transaction[]
}

model Ticket {
  id             Int      @id @default(autoincrement())
  from_location  String
  to_location    String
  arrival_date   DateTime
  departure_date DateTime
  unit_price     Float
  count          Int
  Order          Order[]
}

model Order {
  id                Int           @id @default(autoincrement())
  Ticket            Ticket        @relation(fields: [ticket_id], references: [id])
  ticket_id         Int
  User              User          @relation(fields: [user_id], references: [id])
  user_id           Int
  count             Int
  total_price       Float
  status            Status
  registration_date DateTime      @default(now())
}

model Transaction {
  id      Int     @id @default(autoincrement())
  User    User    @relation(fields: [user_id], references: [id])
  user_id Int
  amount  Float   @default(0)
}

enum Status {
  paid
  canceled
  reserved
}

enum Role {
  client
  admin
}
